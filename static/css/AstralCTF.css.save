html {
	font-family: 'Nova Mono', monospace;
	-webkit-text-size-adjust: 100%
		-ms-text-size-adjust: 100%;
	-webkit-background-size: cover;
	-moz-background-size: cover;
	-o-background-size: cover;
	/*background-color: #4e8bcf;*/
	background-image: url('Background.png');
	background-repeat: no-repeat;
	background-position: center  center;
	background-attachment: fixed;
	box-sizing: border-box;
}

body {
	position: relative;
	margin: 1rem;
	padding-bottom: 6rem;
	min-height: 100%;
}

h1 {
	color: #1D68DA;
}

h2 {
	font-size: 500%;
	color: #1D68DA;
}

h3 {
	font-size: 360%;
	text-align: center;
	color: #1D68DA;
}

h5 {
	color: #768BE2;
	font-size:110%;
}

h6 {
	font-size: 135%;
	text-align: center;
	color: #A63DB2;
}

input {
	width: 25%;
	outline: black;
	border:black	background-color: #71B4D9;
	font-family: 'Nova Mono', monospace;
}

dd {
	display: block;
	-webkit-margin-start: 0;
}

form {
	padding: 1%;
	color: white;
}

a:link {
	color: white;
}

a:visited {
    color: blue;
}

a:hover, a:active {
    color: white;
	background-color: gray;
	opacity: .4;
}

.dropbtn {
    background-color: #444444;
    color: white;
    padding: 16px;
    font-size: 16px;
    border: none;
    cursor: pointer;
	font-family: 'Nova Mono', monospace;
}

.dropbtn:hover, .dropbtn:focus {
    background-color: #333333;
}

.dropdown {
    position: relative;
    display: inline-block;
	padding-left: 2%;
}

.dropdown-content {
    display: none;
    position: absolute;
    background-color: #bbbbbb;
    min-width: 160px;
    box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
    z-index: 1;
}

.dropdown-content a {
    color: black;
    padding: 12px 16px;
    text-decoration: none;
    display: block;
}

.dropdown-content a:hover {
	background-color: #aaaaaa;
	color: white;
}

.title {
	padding-right: 2%;

}

.moto {
	padding-top: 8%;
	white-space: nowrap;
}

.title-content {
	color: white;
}

.show {
	display:block;
}

.body {
	padding-left:2%;
	padding-right:2%;
	color: #ffffff;
	background-color: #070009;
	width: 80%;
}

.footer {
  position: absolute;
  right: 0;
  bottom: 0;
  left: 0;
  padding: 1rem;
  text-align: center;
}
